{
  "name": "og-ecommerce-platform",
  "version": "1.0.0",
  "description": "Full-stack e-commerce platform with AI product generation, React frontend, and Shopify integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "heroku-postbuild": "npm run install-client && npm run build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "shopify-api-node": "^3.12.4",
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "cloudinary": "^1.40.0",
    "sharp": "^0.32.5",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  },
  "keywords": [
    "ecommerce",
    "shopify",
    "react",
    "mongodb",
    "ai",
    "product-management"
  ],
  "author": "OG Team",
  "license": "MIT"
}